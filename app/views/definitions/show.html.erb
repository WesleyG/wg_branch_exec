  </p>
  <p>
    <input type="number" id="nights" value="7">
  </p>
</div>

<script>
  DivBy12Refresh=function(){
    //alert('test');
    var test2=$("#year_money").val(); // this gets the value from the box
    //alert(test2);
    $("#year_money12").val(test2/12);
  }  

  $(document).ready(function() {
  $("#nights").on("keyup", function() {
    $("#nights-count").text($(this).val());
    var price = $(this).closest('.tour').data('daily-price');
    var days = $(this).val();
    $('#total').text(price * days);
  });
});
</script>

